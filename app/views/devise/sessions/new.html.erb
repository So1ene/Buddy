<div class="container">
  <%= link_to image_tag("logo.png", width: 300, class: 'mb-5') %>
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary mb-5" %>
  </div>
<% end %>
  <%= render "devise/shared/links" %>
</div>

  <%= link_to image_tag("logged_out_background.png", class: 'logged-out-background') %>
