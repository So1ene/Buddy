<%= link_to root_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>
<%= link_to image_tag("logo.png", width: 20, class: 'page-title', style:"width: 112px") %>
<div class="container">

<div style="width: 90vw d-flex">
<h1 class="title py-3" style="width: 260px; font-size: 26px; margin-right: 60px" id="filters"><strong>Choose a buddy for your activities!</strong></h1>
</div>


    <div class="d-flex flex-column-reverse" style="width: 360px">
      <% @events.each do |event|  %>
        <div class="card-product">
          <%= link_to '', incoming_requests_path(event), style:"width: 45%; background-size: cover; background-position: center; background-image: url('#{cl_image_path url_for(event.photo), height: 300, width: 400, crop: :fill}')"%>

          <div class="flex-column card-right">
            <ul class="card-product-infos ml-2">
              <%= link_to incoming_requests_path(event) do %>
                <li><h2 style="margin: 0;max-width: 156px !important; white-space:nowrap; max-height: 20px;"><%= event.name %></h2></li>
              <% end %>
              <li><%= event.address %></li>
              <li style="color:gray; font-size: 16px, margin: 0"><%= event.date_time.strftime("%I:%M%p") %></li>
              <li style="color:#222; font-size: 16px, margin: 0"><%= event.date_time.strftime("%m/%d/%Y") %></li>
            </ul>

            <%= link_to 'Choose a Buddy', incoming_requests_path(event), class: "btn btn-primary mb-3 ml-3" %>

          </div>
        </div>
      <% end %>
    </div>

</div>
