<%= link_to root_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>

<h1 class="page-title">BUDDY</h1>

<div class="container">

  <h1>Events for 20/05/2020</h1>

  <div class="d-flex">
    <div class="navbar-dropdown-categories">
      <%= form_tag("/") do %>
        <%= select_tag("categories", options_for_select(["outdoors", "just drinks", "live music", "karaoke", "theater", "other"], "outdoors") ) %>
        <%= submit_tag(">") %>
      <% end %>
    </div>

    <div class="navbar-dropdown-time">
      <%= form_tag("/") do %>
        <%= select_tag("time", options_for_select(["11:00am", "12:00pm", "1:00pm", "2:00pm", "3:00pm", "4:00pm", "5:00pm", "6:00pm", "7:00pm", "8:00pm", "9:00pm", "10:00pm"], "11:00am") ) %>
        <%= submit_tag(">") %>
      <% end %>
    </div>
  </div>

  <div class="m-2">
    <% @events.each do |event|  %>
      <%#= event.created_at.to_formatted_s(:short): <%= event.message %>
      <%= link_to event_path(event) do %>
        <div class="card d-flex flex-row m-4 w-40 shadow" >
          <div style="max-width: 350px; max-height: 250px;">
            <%= cl_image_tag event.photo.key, crop: :fill, class:"card-img" %>
          </div>
          <div class="m-4">
            <p><%= event.name %></p>
            <% end %>
            <p><%= event.date_time.strftime("%m/%d/%Y") %></p>
            <p><%= event.date_time.strftime("%I:%M%p") %></p>
            <p><%= event.address %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>
