<%= link_to root_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>
<h1 class="page-title">BUDDY</h1>
<div class="container">


  <div class="form">

    <h2>Suggest an event</h2>

    <%= simple_form_for @event do |f| %>
      <%= f.input :name, placeholder: 'Event name', label: false %>
      <%= f.input :photo, placeholder: 'photo', label: false %>
      <%= f.input :date_time, label: false %>
      <%= f.input :address, placeholder: 'Address', label: false %>

    <h3>Pick your category:</h3>

    <div class="categories mt-2 mb-2">

      <div class="d-flex">
        <span class="filter" style="background-color: <%= Category.find_by(name: "outdoors").color %>">outdoors</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "live music").color %>">live music</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "food").color %>">food</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "drinks").color %>">drinks</span>
      </div>
      <div class="d-flex">
        <span class="filter" style="background-color: <%= Category.find_by(name: "sports").color %>">sports</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "theater").color %>">theater</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "festival").color %>">festival</span>
        <span class="filter" style="background-color: <%= Category.find_by(name: "other").color %>">other</span>
      </div>

      <%# <ul class="list-group list-group-horizontal">
        <li class="list-group-item">outdoors</li>
        <li class="list-group-item">live music</li>
        <li class="list-group-item">theatre</li>
        <li class="list-group-item">drinks</li>
      </ul>
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item">food</li>
        <li class="list-group-item">festival</li>
        <li class="list-group-item">sports</li>
        <li class="list-group-item">other</li>
      </ul> %>
    </div>

    <div class="description mt-3">
        <%= f.input :ticket_url, placeholder: 'Ticket URL', required: false, label: false %>
        <%= f.input :description, placeholder: 'Add a description to your event', label: false %>
        <%= f.submit 'Save' %>
      <% end %>
    </div>
  </div>

</div>
