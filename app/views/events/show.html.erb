<%= link_to root_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>

<h1 class="page-title">BUDDY</h1>

<div class="container">
  <div class="card shadow p-3 mb-5 bg-white rounded width: 50rem;">
  <div class="card-body">
    <div style="max-width: 730px; max-height: 450px;">
      <%= cl_image_tag @event.photo.key, crop: :fill, class: "w-100 py-5" %>
    </div>
      <% if @event.user == current_user %>
        <div style="text-align:right; width:100%; padding:0;">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#event-<%= @event.id %>">
            <i class="fas fa-trash"></i>
          </button>
      <% end %>
    </div>
    <div class="cards">
      <h2 style="margin: 0"><strong><%= @event.name %></h2></strong>
      <p style="color:gray; font-size: 16px, margin: 0"><%= @event.date_time.strftime("%m/%d/%Y") %> - <%= @event.date_time.strftime("%I:%M%p") %></p>
      <p><%= @event.address %></p>
      <p><%= @event.ticket_url %></p>
      <p><%= @event.description %></p>
    </div>
    <% if @event.user == current_user %>
      <p><%= link_to "This is your event! Check incoming requests", incoming_requests_path(@event), class:"btn btn-primary" %> </p>
    <% else %>
      <%= link_to "Apply", new_event_request_path(@event), class:"btn btn-primary" %>
    <% end %>
    </div>

    <%# # Delete request Modal stuff, do not change %>
    <div class="modal fade" id="event-<%= @event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete event</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this event?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= link_to 'Delete', event_path(@event), method: :delete, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <%# # Delete request Modal stuff, do not change %>

  </div>

</div>
