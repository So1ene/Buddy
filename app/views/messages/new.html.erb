<%= link_to messages_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>

<div class="container">
  <div class="card align-items-center mb-4 mt-0" style="border: none;">
    <h2><strong>You are now buddies for <%= @event.name %>!</strong></h2>
    <div>
      <%= cl_image_tag(@user.photo.key, class: "avatar") %>
      <%= cl_image_tag(current_user.photo.key, class: "avatar") %>
    </div>
    <p>Start your conversation below...</p>
  </div>

  <div id="messages" style="display: inline-block">
    <% @messages.each do |message| %>
      <%= render partial: "message", locals: { message: message } %>
    <% end %>
  </div>

  <div class="d-flex justify-content-between" style="text-align: center">
    <%= simple_form_for [ @event, @user, @message ] do |f| %>
      <div class="p-2" style="max-width: 300px; display: inline-block">
        <%= f.input :content, label: false, placeholder: "Message #{@user.first_name}" %>
      </div>
      <div class="p-2" style="display: inline-block">
        <%= f.button :submit, ">", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
