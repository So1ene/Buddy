<%= link_to messages_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>

<div class="container" style="text-align: center">
  <div class="card align-items-center mb-4 mt-0" style="border: none;">
    <h2><strong>You are now buddies for </h2>
    <h2><%= @event.name %>!</strong></h2>
    <div>
      <%= cl_image_tag(@user.photo.key, class: "avatar") %>
      <%= cl_image_tag(current_user.photo.key, class: "avatar") %>
    </div>
    <p>Start your conversation below...</p>
  </div>

  <div id="messages" style="display: inline-block">
    <% @messages.each do |message| %>
      <div class="d-flex message-container" id="message-<%= message.id %>">
        <div class="card pt-1 px-2 mt-0" style="border: none;">
          <%= cl_image_tag(message.sender.photo.key, class: "avatar") %>
          <small><%= message.created_at.strftime("%l:%M%p") %></small>
        </div>

        <div class="card p-3 m-2" style="background-color: #F7F7F7; border: none; border-radius: 12px;text-align: left">
          <span><strong><%= message.sender.first_name %></strong></span>
          <p><%= message.content %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form" style="text-align: center">
    <%= simple_form_for [ @event, @user, @message ] do |f| %>
    <div class="m-2" style="max-width: 500px; display: inline-block">
      <%= f.input :content, label: false, placeholder: "Message #{@user.first_name}" %>
    </div>
    <div>
      <%= f.button :submit, ">", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
