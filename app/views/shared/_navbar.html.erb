<% if user_signed_in? %>
    <header>
      <span class="menu-control-open" id="menuControlOpen">
        <i class="fas fa-bars"></i>
      </span>
      <div class="menu">
        <div class="menu-inner">
          <span class="menu-control-close" id="menuControlClose">
            <i class="fas fa-bars"></i>
          </span>
          <nav>
            <%= link_to edit_user_registration_path do %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag url_for(current_user.photo), class: "border navbar-avatar mr-3" %>
              <% else %>
                <%= image_tag "https://res.cloudinary.com/dkbbawtjw/image/upload/v1589987704/art-bnb/default_icon_c0dy7j.png", class: "border navbar-avatar mr-3" %>
              <% end %>
            <% end %>
            <%= link_to "Home", root_path %>
            <%= link_to "Inbox", messages_path %>
            <%= link_to "Suggest an event", new_event_path %>
            <%= link_to "My Calendar", calendar_path %>
            <%= link_to "Choose a Buddy", my_events_path %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </nav>
        </div>
      </div>
    </header>
<% end %>
