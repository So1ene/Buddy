<div class="container">



<%= cl_image_tag @user.photo.key, height: 200, width: 200, crop: :fill %>


<h1>Hi <%= @user.first_name %></h1>
<p>Not you? <%= link_to "Log out", destroy_user_session_path, method: :delete %></p>

<h2>Search for an event</h2>


<%= simple_form_for @user, html: { class: 'form-inline' }, url: root_path, method: :patch do |f| %>
  <%= f.input :search_location, placeholder: 'Input a location', label:false %>
  <%= f.submit '>', class: "btn btn-primary" %>
<% end %>


<h2>or</h2>


<%= link_to "Suggest an event", new_event_path, class: "btn btn-primary" %>



</div>
