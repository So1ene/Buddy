<h1 class="page-title">BUDDY</h1>
<div class="container">

<%= cl_image_tag @user.photo.key, height: 150, width: 150, crop: :fill, class: "avatar-large mt-3" %>


<h1 class="mt-4 mb-5">Hi <%= @user.first_name %></h1>

<h2 class="mb-3 mt-2">Search for an event</h2>


<%= simple_form_for @user, url: root_path, method: :patch do |f| %>
  <%= f.input :search_location, placeholder: 'Input a location', label:false %>
<% end %>


<h2 class="mt-5">or</h2>


<%= link_to "Suggest an event", new_event_path, class: "btn-lg btn-primary mt-2 mb-5" %>



</div>
