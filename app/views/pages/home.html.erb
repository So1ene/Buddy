<%= link_to welcome_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>
<h1 class="page-title">BUDDY</h1>

<div class="container">

<h1 class="py-3">Pick your category:</h1>

<div class="d-flex">
<span class="filter" style="background-color: #007782">outdoors</span>
<span class="filter" style="background-color: #FF7662">live music</span>
<span class="filter" style="background-color: #FF4E40">food</span>
<span class="filter" style="background-color: #007B70">drinks</span>
</div>
<div class="d-flex">
<span class="filter" style="background-color: #00C6B4">sports</span>
<span class="filter" style="background-color: #FFA899">theater</span>
<span class="filter" style="background-color: #FD8377">festival</span>
<span class="filter" style="background-color: #003B41">other</span>
</div>

  <%= render partial: "calendar", locals: { events: @events } %>

  <h1>TO-DO: Search bar</h1>
  <br />

  <h2>Closest to you:</h2>
  <div class="d-flex flex-column-reverse">
    <% @events.each do |event|  %>
      <%#= event.created_at.to_formatted_s(:short): <%= event.message %>
      <%= link_to event_path(event) do %>

      <div class="card d-flex flex-row m-2 shadow">
        <div style="max-width: 350px; max-height: 300px;">
          <%= cl_image_tag event.photo.key, crop: :fill, class:"card-img" %>
        </div>

        <div class="m-3">
          <p><%= event.name  %></p>
        <% end %>
          <p><%= event.date_time.strftime("%m/%d/%Y") %></p>
          <p><%= event.date_time.strftime("%I:%M%p") %></p>
          <p><%= event.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
