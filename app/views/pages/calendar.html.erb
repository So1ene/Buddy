<%= link_to welcome_path, class: "back-button" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>
<h1 class="page-title">BUDDY</h1>
<div class="container">

<h1>My Calendar:</h1>

<div class="py-4">
<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <div class="d-flex justify-content-start">
    <% events[0...3].each do |event| %>
      <i class="fas fa-circle" style="font-size: 8px; padding-right: 2px; color: black;"></i>
    <% end %>
  </div>
<% end %>
</div>

<h2>Coming up:</h2>

  <div class="d-flex flex-column-reverse">
    <% @events.each do |event|  %>
      <%#= event.created_at.to_formatted_s(:short): <%= event.message %>
      <%= link_to event_path(event) do %>
        <div class="cards my-4 shadow">
          <p>Event name: <%= event.name  %></p>
          <p>Date: <%= event.date_time.strftime("%m/%d/%Y") %></p>
          <p>Time: <%= event.date_time.strftime("%I:%M%p") %></p>
          <p>Address: <%= event.address %></p>
        </div>
      <% end %>
    <% end %>
  </div>




</div>
